<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout
    android:gravity="center"
    android:layout_height="match_parent"
    android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:inputType="textPersonName"
        android:hint="Email" android:ems="10"
        android:layout_alignParentTop="true"
        android:id="@+id/edit1"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:inputType="textPersonName"
        android:hint="Password"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:id="@+id/edit2"
        android:layout_marginTop="100dp"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/login"
        android:layout_marginTop="200dp"
        android:text="Login"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:layout_alignLeft="@+id/pass"
        android:layout_alignStart="@+id/pass"
        android:layout_below="@+id/pass"/>

</RelativeLayout>